global:
  scrape_interval: 10s
  evaluation_interval: 10s
alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - "localhost:{{alertmanager_port}}"

rule_files:
- "{{prometheus_rules_dir}}/*"

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:{{prometheus_port}}"]
